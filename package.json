{
  "name": "backend-test-tools",
  "version": "1.0.1",
  "description": "Node test tools",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "NODE_ENV=test nyc --reporter=none mocha test/hooks.ts \"src/**/*.test.ts\"",
    "build": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && npx babel src --out-dir dist --source-maps --extensions \".ts\" --ignore \"**/*.test.ts\" --copy-files --no-copy-ignored",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prakashmahendran/backend-test-tools.git"
  },
  "author": "Ram",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/prakashmahendran/backend-test-tools/issues"
  },
  "homepage": "https://github.com/prakashmahendran/backend-test-tools#readme",
  "devDependencies": {
    "@babel/cli": "^7.25.7",
    "@babel/core": "^7.25.8",
    "@babel/plugin-transform-class-properties": "^7.25.7",
    "@babel/plugin-transform-runtime": "^7.25.7",
    "@babel/preset-env": "^7.25.8",
    "@babel/preset-typescript": "^7.25.7",
    "@babel/register": "^7.25.7",
    "@eslint/js": "^9.12.0",
    "@faker-js/faker": "^9.0.3",
    "@types/chai": "^4.3.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.114",
    "@types/node-forge": "^0.10.10",
    "@types/sinon": "^10.0.20",
    "@types/superagent": "^4.1.24",
    "@types/supertest": "^2.0.16",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "babel-plugin-istanbul": "^7.0.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-tsconfig-paths": "^1.0.3",
    "core-js": "^3.38.1",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "mocha": "^9.2.2",
    "move-cli": "^2.0.0",
    "nyc": "^15.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.ts": "eslint"
  },
  "dependencies": {
    "@babel/runtime": "^7.25.7",
    "jimp": "^0.16.13",
    "jsonwebtoken": "^8.5.1",
    "node-forge": "^1.3.1",
    "rfdc": "^1.4.1",
    "sinon": "^9.2.4",
    "supertest": "^4.0.2"
  },
  "peerDependencies": {
    "node-server-engine": "^1.0.5"
  }
}
